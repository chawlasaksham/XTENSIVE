<% layout("listings/layouts/boilerplate")%>
<div class="row">
    <div style="display: flex;"><h1 class="col-6 offset-3" style="color: #d6006D;">LOG IN <span > <a style="color: #000; text-decoration: none;" href="/signup"> / SIGN UP</span></h1></a></div>
    <div class="col-6 offset-3">
        <form action="/login" method="post" >
            
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input type="text"
                id="username" 
                name="username" 
                placeholder="enter username"
                class="form-control"
                required>
                
            </div>

            

            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="password"
                id="password" 
                name="password" 
                placeholder="enter password"
                class="form-control"
                required>
                
            </div>
            <Button class="btn btn-success">LOG IN</Button>
        </form>        
    </div>
</div>