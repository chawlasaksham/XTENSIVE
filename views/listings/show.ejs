<% layout("listings/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%= product.Product_name %></h3>
        </div>
        
        <div class="card col-6 offset-3 show-card product-card">        
            <img 
                src="<%= product.image.url %>" 
                class="card-img-top show-img" 
                alt="product_image">
            <div class="card-body">
                <p class="card-text"><i><%= product.owner.username %></i></p>
                <!-- <p><= product.description %><br></p> -->
                <p><%= product.Product_name %></p>
                <p>&#8377 <%= product.price.toLocaleString("en-IN") %><br></p>
                <p><%= product.sku %></p>
                <p>QUANTITY:<%= product.quantity %></p>
                <p>CATEGORY:<%= product.category %></p>
                <!-- <p><= product.location %><br></p> -->
                <!-- <p><= product.country %></p><br> -->
            </div>
        </div>

        <div class="btns mb-1">
            <a href="/product/<%= product._id %>/edit" class="btn btn-dark cols-2 offset-3 edit-btn">Edit</a>
            
            <form method="post" action="/product/<%= product._id %>?_method=delete">
                <button class="btn btn-dark cols-2 offset-5">Delete</button>
            </form>
        </div>
    </div>

    <hr>
    
</body>
