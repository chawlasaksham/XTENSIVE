<% layout("listings/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>edit listing</h3>

    <form method="POST" novalidate class="needs-validation" action = "/listings/<%=listing._id%>?_method=PUT">
     <div class="mb-3">
        <lable for="title" class="form-label"> title</lable>
        <input type="text" name="listing[title]" value = "<%= listing.title%> "placeholder="enter title" class="form-control" required>
        <div class="invalid-feedback">please enter valid title</div>
    </div> 
     <br>

       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea type="text" required name="listing[description]" class="form-control" value = "<%= listing.description%> " placeholder="enter description"><%= listing.description %></textarea>
        <div class="invalid-feedback">please enter small description</div>
       </div>
       
       <br> 
        <div class="mb-3">
            <lable for="image" class="form-label">image</lable>
       <input type="text" required name="image" class="form-control" placeholder="enter image url"  value = "<%= listing.image%> ">
       <div class="invalid-feedback">please enter valid image url</div>
    
        </div>
       <br> 

       <div class="row">
       <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price:</lable>
       <input type="text" required name="listing[price]" class="form-control" placeholder="enter number"  value = "<%= listing.price%> ">
       <div class="invalid-feedback">please enter valid price</div>
        </div>
       
       <br> 
       <div class="mb-3 col-md-8">
        <label for="country" class="form-label">country</label>
       <input type="text" required class="form-control" name="listing[country]" placeholder="enter country"  value = "<%= listing.country%> ">
       <div class="invalid-feedback">please enter valid country name</div>
    </div></div>
       <br>
    
       <div class="mb-3">
        <label for="location" class="form-label">location</label>
       <input type="text" required class="form-control" name="listing[location]" placeholder="enter location"  value = "<%= listing.location%> ">
       <div class="invalid-feedback">please enter valid location</div>
       </div>
       <br>  
       <button class="btn btn-dark edit-btn mb-3">edit</button>
    </form>
</div></div>    

</body>
<script src="/js/validation.js"></script>

