<% layout("listings/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h3>Create a new listing</h3>
    <br><br>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data" >
        <div class="mb-3">
        <lable for="title" class="form-label">title</lable>
       <input type="text" 
       name="listing[title]" 
       placeholder="enter title"
        class="form-control"
        required>
        <div class="invalid-feedback">please enter valid title</div>
    </div>
    <div class="mb-3">
        <lable for="description" class="form-label">description</lable><br>
       <textarea type="text" name="listing[description]" required placeholder="enter description" ></textarea>
       <div class="invalid-feedback">please enter small description</div>
    </div> 

    
    <div class="mb-3">
        <lable for="image url" class="form-label">image url</lable>
       <input type="file" name="listing[image][filename]"  \ class="form-control">
        required
    </div>
    
    
    <div class="row "><div class="mb-3 col-mb-8">  
        <lable for="price" class="form-label">price</lable>
        <input type="text" required name="listing[price]" placeholder="enter number" class="form-control">
        <div class="invalid-feedback">please enter valid price</div>
    </div>
    
    
    <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">country</lable>
       <input type="text" required name="listing[country]" placeholder="enter country" class="form-control">
       <div class="invalid-feedback">please enter valid country name</div>
    </div>
   
    </div>

    
    <div class="mb-3">
        <lable for="location" class="form-label">location</lable>
       <input type="text" required name="listing[location]" placeholder="enter location" class="form-control">
       <div class="invalid-feedback">please enter valid location</div>
    </div>
    
    

    <button class="btn btn-dark add-btn">add</button>
    
</form>
</div></div>    
</body>
